    var n = 6; // However big you want the staircase to be.
    var i = 0;
    var j = '';
    var l = n - 1;
    
    while (i < n) {
        j = j + '#'; 
        var k ='';
       
        while (l > 0) {
           k = k + ' ';
           l--;
       }
        
        console.log(k + j);
        i++;
        l = n - i - 1;
    }
