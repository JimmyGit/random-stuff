<body>
	<section>
	<textarea id="text"></textarea>
    
    <button name="insert" value="insert" onclick="addList()">Insert</button>

    <ul id="list">
    </ul>
</section>

<script>
// Add your javascript here



function addList() {
	var list = document.getElementById('list');
	var node = document.createElement('li');
	var text = document.getElementById('text').value;

    if (text.length > 0) {
	    console.log(text);
		node.innerHTML = text;
		list.appendChild(node);
    }

    else { alert('Please type in value') }
    
}
</script>
